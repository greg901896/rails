
<div class="jumbotron">
  <h1 class="display-4">
    <%= @total.firstName %>
    <%= @total.lastName %>
  </h1>
  <p class="lead">
    <%= @total.email %>  | 
    <%= @total.phone %>  |  
    <%= @total.twitter %>

  </p>
  <br/>

  <%= link_to 'Edit', edit_total_path(@total), class:"btn btn-secondary" %>

  <%= button_to "Delete", @total, method: :delete, class:"btn btn-secondary" %>
   
  <%= link_to 'Back', totals_path, class:"btn btn-dark" %>

</div>