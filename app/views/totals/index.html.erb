

<%if user_signed_in? %>
   <p id="notice"><%= notice %></p>
   <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>first name</th>
          <th>last name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @totals.each do |total| %>
          <% if total.user == current_user %>
          <tr>
            <td><%= total.firstName %></td>
            <td><%= total.lastName %></td>
            <td><%= total.email %></td>
            <td><%= total.phone %></td>
            <td><%= total.twitter %></td>
            <td><%= link_to 'Delete', total, method: :delete, class: "btn btn-outline-danger btn-sm" %></td>
            <td><%= link_to "Edit",edit_total_path(total)%></td>
            <td><%= link_to "Show",total%></td>
          </tr>
          <% end %>
          <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Friend', new_total_path, class:"btn btn-secondary" %>
<% else %>
<h1>helloooooo this is my homepage</h1>
<% end %>